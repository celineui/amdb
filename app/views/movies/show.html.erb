<p id="notice"><%= notice %></p>

<h2>Vote For This Movie!</h2>
<%= form_for(@vote) do |f| %>

  <!-- <input type="hidden" name="vote[movie_id]" value="1" -->

  <%= f.hidden_field :movie_id, value: @movie.id %>
  <%#= f.collection_select :movie_id, Movie.all, :id, :title %>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.collection_select :user_id, User.all, :id, :username %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<p>
  <b>Title:</b>
  <%= @movie.title %>
</p>

<p>
  <b>Director:</b>
  <%= @movie.director.name %>
</p>

<p>
  <b>Year:</b>
  <%= @movie.year %>
</p>

<p>
  <b>Cast:</b>
  <ul>
    <% @movie.actors.each do |actor| %>
      <li>
        <%= link_to actor.name, actor %>
      </li>
    <% end %>
  </ul>
</p>

<p>
  <b>Votes:</b>
  <%= @movie.votes.count %>
  <ul>
    <% @movie.users.each do |user| %>
      <li><%= user.username %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

















