<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @movie.title %>
</p>

<p>
  <b>Director:</b>
  <%= @movie.director.name %>
</p>

<p>
  <b>Year:</b>
  <%= @movie.year %>
</p>

<p>
  <b>Cast:</b>
  <ul>
    <% @movie.actors.each do |actor| %>
      <li>
        <%= link_to actor.name, actor %>
      </li>
    <% end %>
  </ul>
</p>

<p>
  <b>Votes:</b>
  <%= @movie.votes.count %>
  <ul>
    <% @movie.users.each do |user| %>
      <li><%= user.username %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

















