<div class="row">
  <div class="span12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Director</th>
        <th>Year</th>
        <th>Votes</th>
        <th>Add A Vote</th>
      </tr>

    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.title, movie %></td>
        <td><%= link_to movie.director.name, movie.director %></td>
        <td><%= movie.year %></td>
        <td><%= movie.votes.count %></td>
        <td>
          <%= form_for Vote.new do |f| %>
            <%= f.hidden_field :movie_id, value: movie.id %>
            <%= f.hidden_field :user_id, value: session[:user_id] %>
            <%= f.submit 'Upvote', class: "btn btn-primary" %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
<div class="row">
  <div class="span12">
    <%= link_to 'New Movie', new_movie_path, class: "btn btn-primary" %>
  </div>
</div>


